{
    "name": "sigil-lang",
    "displayName": "Sigil Language",
    "description": "Syntax highlighting for the Sigil programming language",
    "version": "0.1.0",
    "publisher": "sigil-lang",
    "engines": {
        "vscode": "^1.75.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [
            {
                "id": "sigil",
                "aliases": [
                    "Sigil",
                    "sigil"
                ],
                "extensions": [
                    ".si"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "sigil",
                "scopeName": "source.sigil",
                "path": "./syntaxes/sigil.tmLanguage.json"
            }
        ]
    }
}
