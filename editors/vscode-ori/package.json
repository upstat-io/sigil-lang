{
    "name": "ori-lang",
    "displayName": "Ori Language",
    "description": "Syntax highlighting for the Ori programming language",
    "version": "0.1.0",
    "publisher": "ori-lang",
    "engines": {
        "vscode": "^1.75.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [
            {
                "id": "ori",
                "aliases": [
                    "Ori",
                    "ori"
                ],
                "extensions": [
                    ".ori"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "ori",
                "scopeName": "source.ori",
                "path": "./syntaxes/ori.tmLanguage.json"
            }
        ]
    }
}
