// std.testing - Testing assertions and utilities
//
// Note: Most testing functions are now in the prelude and auto-imported.
// This module is kept for backwards compatibility with existing imports.
//
// Auto-available (from prelude):
// - assert(cond:), assert_eq(actual:, expected:), assert_ne(actual:, unexpected:)
// - assert_some(opt:), assert_none(opt:), assert_ok(res:), assert_err(res:)
// - is_some(opt:), is_none(opt:), is_ok(res:), is_err(res:)
// - len(items:), is_empty(items:)
// - compare(a:, b:), min(a:, b:), max(a:, b:)
//
// This file re-exports prelude functions for `use std.testing { ... }` compatibility.

// Re-export assertion functions (these call the prelude versions)
pub @assert (condition: bool) -> void = run(
    if condition then () else panic(msg: "assertion failed")
)

pub @assert_eq (actual: int, expected: int) -> void = run(
    if actual == expected then ()
    else panic(msg: "assertion failed: " + str(actual) + " != " + str(expected))
)

pub @assert_ne (actual: int, unexpected: int) -> void = run(
    if actual != unexpected then ()
    else panic(msg: "assertion failed: values are equal: " + str(actual))
)
