---
import { getCollection } from 'astro:content';

const docs = await getCollection('docs');
const currentPath = Astro.url.pathname;

const sections = [
  { key: 'getting-started', label: 'Getting Started' },
  { key: 'spec', label: 'Specification' },
] as const;

const grouped = sections.map(section => ({
  ...section,
  items: docs
    .filter(doc => doc.data.section === section.key)
    .sort((a, b) => a.data.order - b.data.order),
}));
---

<aside class="sidebar">
  <nav class="sidebar-nav">
    {grouped.map(section => (
      <div class="sidebar-section">
        <h3 class="sidebar-section-title">{section.label}</h3>
        <ul class="sidebar-list">
          {section.items.map(item => {
            const href = `/docs/${item.id}`;
            const isActive = currentPath === href || currentPath === `${href}/`;
            return (
              <li>
                <a href={href} class:list={['sidebar-link', { active: isActive }]}>
                  {item.data.title}
                </a>
              </li>
            );
          })}
        </ul>
      </div>
    ))}
  </nav>
</aside>

<style>
  .sidebar {
    width: var(--sidebar-width);
    flex-shrink: 0;
    background: var(--color-bg-secondary);
    border-right: 1px solid var(--color-border);
    padding: var(--space-6) 0;
    overflow-y: auto;
    height: calc(100vh - var(--header-height) - 48px);
    position: sticky;
    top: var(--header-height);
  }

  .sidebar-nav {
    padding: 0 var(--space-4);
  }

  .sidebar-section {
    margin-bottom: var(--space-6);
  }

  .sidebar-section-title {
    font-size: var(--text-xs);
    font-weight: var(--weight-semibold);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--color-text-muted);
    padding: 0 var(--space-3);
    margin-bottom: var(--space-2);
  }

  .sidebar-list {
    list-style: none;
    padding: 0;
  }

  .sidebar-list li {
    margin-bottom: 0;
  }

  .sidebar-link {
    display: block;
    padding: var(--space-1) var(--space-3);
    font-size: var(--text-sm);
    color: var(--color-text-secondary);
    text-decoration: none;
    border-radius: var(--radius-sm);
    transition: all var(--transition-fast);
  }

  .sidebar-link:hover {
    color: var(--color-text-primary);
    background: var(--color-bg-tertiary);
  }

  .sidebar-link.active {
    color: var(--color-accent);
    background: var(--color-accent-subtle);
  }

  @media (max-width: 768px) {
    .sidebar {
      width: 100%;
      height: auto;
      position: static;
      border-right: none;
      border-bottom: 1px solid var(--color-border);
      padding: var(--space-4) 0;
    }
  }
</style>
