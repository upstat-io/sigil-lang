---
interface SidebarItem {
  id: string;
  title: string;
}

interface SidebarSubsection {
  name: string;
  items: SidebarItem[];
}

interface SidebarSection {
  title: string;
  basePath: string;
  items: SidebarItem[];
  subsections?: SidebarSubsection[];
}

interface Props {
  sections: SidebarSection[];
  expandAllByDefault?: boolean;
}

const { sections, expandAllByDefault = false } = Astro.props;
const currentPath = Astro.url.pathname;

// Find the current page title for the mobile dropdown
let currentPageTitle = 'Navigation';
for (const section of sections) {
  for (const item of section.items) {
    const href = `${section.basePath}/${item.id}`;
    if (currentPath === href || currentPath === `${href}/`) {
      currentPageTitle = item.title;
    }
  }
  for (const subsection of section.subsections || []) {
    for (const item of subsection.items) {
      const href = `${section.basePath}/${item.id}`;
      if (currentPath === href || currentPath === `${href}/`) {
        currentPageTitle = item.title;
      }
    }
  }
}
---

<aside class="sidebar" data-sidebar data-scroll-restore>
  <button class="sidebar-toggle" data-sidebar-toggle aria-expanded="false">
    <span class="sidebar-toggle-text">{currentPageTitle}</span>
    <svg class="sidebar-toggle-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round">
      <polyline points="6 9 12 15 18 9"></polyline>
    </svg>
  </button>

  <nav class="sidebar-nav" data-sidebar-nav>
    {sections.map(section => (
      <div class="sidebar-section">
        <h3 class="sidebar-section-title">{section.title}</h3>
        <ul class="sidebar-list">
          {section.items.map(item => {
            const href = `${section.basePath}/${item.id}`;
            const isActive = currentPath === href || currentPath === `${href}/`;
            return (
              <li>
                <a href={href} class:list={['sidebar-link', { active: isActive }]}>
                  {item.title}
                </a>
              </li>
            );
          })}
        </ul>

        {section.subsections?.map(subsection => {
          const hasActiveItem = subsection.items.some(item => {
            const href = `${section.basePath}/${item.id}`;
            return currentPath === href || currentPath === `${href}/`;
          });
          return (
            <details class="sidebar-subsection" open={expandAllByDefault || hasActiveItem}>
              <summary class="sidebar-subsection-summary">{subsection.name}</summary>
              <ul class="sidebar-list sidebar-subsection-list">
                {subsection.items.map(item => {
                  const href = `${section.basePath}/${item.id}`;
                  const isActive = currentPath === href || currentPath === `${href}/`;
                  return (
                    <li>
                      <a href={href} class:list={['sidebar-link', { active: isActive }]}>
                        {item.title}
                      </a>
                    </li>
                  );
                })}
              </ul>
            </details>
          );
        })}
      </div>
    ))}
  </nav>
</aside>

<script is:inline>
  // Restore scroll position immediately (runs synchronously as HTML is parsed)
  (function() {
    var sidebar = document.currentScript.previousElementSibling;
    if (sidebar && sidebar.hasAttribute('data-scroll-restore')) {
      var savedScrollTop = sessionStorage.getItem('sidebarScrollTop');
      if (savedScrollTop !== null) {
        sidebar.scrollTop = parseInt(savedScrollTop, 10);
      }
      sidebar.removeAttribute('data-scroll-restore');
    }
  })();
</script>

<script is:inline>
  // Set up event handlers after DOM is ready
  document.addEventListener('DOMContentLoaded', function() {
    var sidebar = document.querySelector('[data-sidebar]');
    var toggle = document.querySelector('[data-sidebar-toggle]');
    var nav = document.querySelector('[data-sidebar-nav]');

    if (!sidebar || !toggle || !nav) {
      return;
    }

    // Save scroll position on scroll (debounced)
    var scrollTimeout;
    sidebar.addEventListener('scroll', function() {
      clearTimeout(scrollTimeout);
      scrollTimeout = setTimeout(function() {
        sessionStorage.setItem('sidebarScrollTop', sidebar.scrollTop);
      }, 100);
    }, { passive: true });

    // Also save before unload as backup
    window.addEventListener('beforeunload', function() {
      sessionStorage.setItem('sidebarScrollTop', sidebar.scrollTop);
    });

    // Close mobile dropdown when clicking a link
    var links = nav.querySelectorAll('a');
    for (var i = 0; i < links.length; i++) {
      links[i].addEventListener('click', function() {
        sidebar.classList.remove('open');
        toggle.setAttribute('aria-expanded', 'false');
      });
    }

    toggle.addEventListener('click', function(e) {
      e.preventDefault();
      var isOpen = sidebar.classList.toggle('open');
      toggle.setAttribute('aria-expanded', isOpen ? 'true' : 'false');
    });
  });
</script>

<style>
  .sidebar {
    width: var(--sidebar-width);
    flex-shrink: 0;
    background: var(--color-bg-secondary);
    border-right: 1px solid var(--color-border);
