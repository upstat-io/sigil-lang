---
interface SidebarItem {
  id: string;
  title: string;
}

interface SidebarSubsection {
  name: string;
  items: SidebarItem[];
}

interface SidebarSection {
  title: string;
  basePath: string;
  items: SidebarItem[];
  subsections?: SidebarSubsection[];
}

interface Props {
  sections: SidebarSection[];
}

const { sections } = Astro.props;
const currentPath = Astro.url.pathname;
---

<aside class="sidebar">
  <nav class="sidebar-nav">
    {sections.map(section => (
      <div class="sidebar-section">
        <h3 class="sidebar-section-title">{section.title}</h3>
        <ul class="sidebar-list">
          {section.items.map(item => {
            const href = `${section.basePath}/${item.id}`;
            const isActive = currentPath === href || currentPath === `${href}/`;
            return (
              <li>
                <a href={href} class:list={['sidebar-link', { active: isActive }]}>
                  {item.title}
                </a>
              </li>
            );
          })}
        </ul>

        {section.subsections?.map(subsection => {
          const hasActiveItem = subsection.items.some(item => {
            const href = `${section.basePath}/${item.id}`;
            return currentPath === href || currentPath === `${href}/`;
          });
          return (
            <details class="sidebar-subsection" open={hasActiveItem}>
              <summary class="sidebar-subsection-summary">{subsection.name}</summary>
              <ul class="sidebar-list sidebar-subsection-list">
                {subsection.items.map(item => {
                  const href = `${section.basePath}/${item.id}`;
                  const isActive = currentPath === href || currentPath === `${href}/`;
                  return (
                    <li>
                      <a href={href} class:list={['sidebar-link', { active: isActive }]}>
                        {item.title}
                      </a>
                    </li>
                  );
                })}
              </ul>
            </details>
          );
        })}
      </div>
    ))}
  </nav>
</aside>

<style>
  .sidebar {
    width: var(--sidebar-width);
    flex-shrink: 0;
    background: var(--color-bg-secondary);
    border-right: 1px solid var(--color-border);
    padding: var(--space-6) 0;
    overflow-y: auto;
    height: calc(100vh - var(--header-height));
    position: sticky;
    top: var(--header-height);
  }

  .sidebar-nav {
    padding: 0 var(--space-4);
  }

  .sidebar-section {
    margin-bottom: var(--space-6);
  }

  .sidebar-section-title {
    font-size: var(--text-xs);
    font-weight: var(--weight-semibold);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--color-text-muted);
    padding: 0 var(--space-3);
    margin-bottom: var(--space-2);
  }

  .sidebar-list {
    list-style: none;
    padding: 0;
  }

  .sidebar-list li {
    margin-bottom: 0;
  }

  .sidebar-link {
    display: block;
    padding: var(--space-1) var(--space-3);
    font-size: var(--text-sm);
    color: var(--color-text-secondary);
    text-decoration: none;
    border-radius: var(--radius-sm);
    transition: all var(--transition-fast);
  }

  .sidebar-link:hover {
    color: var(--color-text-primary);
    background: var(--color-bg-tertiary);
  }

  .sidebar-link.active {
    color: var(--color-accent);
    background: var(--color-accent-subtle);
  }

  .sidebar-subsection {
    margin-top: 0;
  }

  .sidebar-subsection-summary {
    font-size: var(--text-sm);
    font-weight: var(--weight-medium);
    color: var(--color-text-secondary);
    padding: var(--space-1) var(--space-3);
    cursor: pointer;
    list-style: none;
    display: flex;
    align-items: center;
    gap: var(--space-2);
    border-radius: var(--radius-sm);
    transition: all var(--transition-fast);
  }

  .sidebar-subsection-summary::-webkit-details-marker {
    display: none;
  }

  .sidebar-subsection-summary::before {
    content: 'â€º';
    font-size: 1.1em;
    transition: transform var(--transition-fast);
  }

  details[open] .sidebar-subsection-summary::before {
    transform: rotate(90deg);
  }

  .sidebar-subsection-summary:hover {
    color: var(--color-text-primary);
    background: var(--color-bg-tertiary);
  }

  .sidebar-subsection-list {
    padding-left: var(--space-4);
    margin-top: var(--space-1);
  }

  @media (max-width: 768px) {
    .sidebar {
      width: 100%;
      height: auto;
      position: static;
      border-right: none;
      border-bottom: 1px solid var(--color-border);
      padding: var(--space-4) 0;
    }
  }
</style>

<script is:inline>
  (function() {
    const sidebar = document.querySelector('.sidebar');
    if (!sidebar) return;

    const savedScroll = sessionStorage.getItem('sidebar-scroll');
    if (savedScroll) {
      sidebar.scrollTop = parseInt(savedScroll, 10);
    }

    document.querySelectorAll('.sidebar-link').forEach(link => {
      link.addEventListener('click', () => {
        sessionStorage.setItem('sidebar-scroll', sidebar.scrollTop.toString());
      });
    });
  })();
</script>
