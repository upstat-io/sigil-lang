---
const currentPath = Astro.url.pathname;
const navLinks = [
  { href: '/', label: 'Home' },
  { href: '/docs/', label: 'Docs' },
  { href: '/playground', label: 'Playground' },
  { href: '/roadmap', label: 'Roadmap' },
];
---

<header class="site-header">
  <div class="header-inner">
    <a href="/" class="logo">
      <span class="logo-text">Ori</span>
    </a>

    <nav class="nav">
      {navLinks.map(link => (
        <a
          href={link.href}
          class:list={['nav-link', { active: currentPath === link.href || (link.href !== '/' && currentPath.startsWith(link.href)) }]}
        >
          {link.label}
        </a>
      ))}
      <a href="https://github.com/sponsors/upstat-io" class="nav-link nav-sponsor" target="_blank" rel="noopener" aria-label="Sponsor Ori">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
          <path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z"/>
        </svg>
        <span class="sponsor-text">Sponsor</span>
      </a>
      <a href="https://github.com/upstat-io/ori-lang" class="nav-link nav-github" target="_blank" rel="noopener" aria-label="GitHub repository">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
          <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
        </svg>
      </a>
    </nav>
  </div>
</header>

<style>
  .site-header {
    position: sticky;
    top: 0;
    z-index: 100;
    background: var(--color-bg-secondary);
    border-bottom: 1px solid var(--color-border);
    height: var(--header-height);
  }

  .header-inner {
    max-width: var(--max-width);
    margin: 0 auto;
    padding: 0 var(--space-6);
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .logo {
    text-decoration: none;
  }

  .logo-text {
    font-size: var(--text-xl);
    font-weight: var(--weight-bold);
    color: var(--color-accent);
    font-family: var(--font-mono);
  }

  .nav {
    display: flex;
    align-items: center;
    gap: var(--space-1);
  }

  .nav-link {
    padding: var(--space-2) var(--space-3);
    border-radius: var(--radius-md);
    font-size: var(--text-sm);
    font-weight: var(--weight-medium);
    color: var(--color-text-secondary);
    text-decoration: none;
    transition: all var(--transition-fast);
  }

  .nav-link:hover {
    color: var(--color-text-primary);
    background: var(--color-bg-tertiary);
  }

  .nav-link.active {
    color: var(--color-text-primary);
    background: var(--color-bg-tertiary);
  }

  .nav-github {
    display: flex;
    align-items: center;
    margin-left: var(--space-2);
  }

  .nav-github svg {
    opacity: 0.7;
    transition: opacity var(--transition-fast);
  }

  .nav-github:hover svg {
    opacity: 1;
  }

  .nav-sponsor {
    display: flex;
    align-items: center;
    gap: var(--space-1);
    margin-left: var(--space-2);
  }

  .nav-sponsor svg {
    color: #db61a2;
    opacity: 0.8;
    transition: all var(--transition-fast);
  }

  .nav-sponsor:hover svg {
    opacity: 1;
    transform: scale(1.1);
  }

  .sponsor-text {
    font-size: var(--text-sm);
  }

  @media (max-width: 640px) {
    .sponsor-text {
      display: none;
    }
  }
</style>
