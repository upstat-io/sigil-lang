---
import PlaygroundLayout from '../layouts/PlaygroundLayout.astro';
import Playground from '../components/playground/Playground.svelte';
---

<PlaygroundLayout>
  <Playground
    client:only="svelte"
    config={{
      showToolbar: true,
      showOutput: true,
      height: '100%',
      enableShare: true,
      enableExamples: true,
      readUrlHash: true,
      fontSize: 14,
      layout: 'vertical',
    }}
  />
</PlaygroundLayout>
