// Tests for Reverse a string

use "../reverse_string" { reverse, is_palindrome }

@test_reverse tests @reverse () -> void = run(
    assert(.cond: reverse("") == ""),
    assert(.cond: reverse("a") == "a"),
    assert(.cond: reverse("hello") == "olleh"),
    assert(.cond: reverse("abc") == "cba")
)

@test_is_palindrome tests @is_palindrome () -> void = run(
    assert(.cond: is_palindrome("") == true),
    assert(.cond: is_palindrome("a") == true),
    assert(.cond: is_palindrome("aba") == true),
    assert(.cond: is_palindrome("racecar") == true),
    assert(.cond: is_palindrome("hello") == false)
)
