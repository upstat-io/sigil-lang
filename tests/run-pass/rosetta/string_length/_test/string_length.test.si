// Tests for String length

use string_length { string_length, is_empty, has_content }

@test_string_length tests @string_length () -> void = run(
    assert(string_length("") == 0),
    assert(string_length("a") == 1),
    assert(string_length("hello") == 5),
    assert(string_length("hello world") == 11)
)

@test_is_empty tests @is_empty () -> void = run(
    assert(is_empty("") == true),
    assert(is_empty("a") == false),
    assert(is_empty("hello") == false)
)

@test_has_content tests @has_content () -> void = run(
    assert(has_content("") == false),
    assert(has_content("a") == true),
    assert(has_content("hello") == true)
)
