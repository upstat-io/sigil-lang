// Tests for String length

use std.testing { assert, assert_eq, assert_ne }
use "../string_length" { string_length, is_empty_str, has_content }

@test_string_length tests @string_length () -> void = run(
    assert(cond: string_length("") == 0),
    assert(cond: string_length("a") == 1),
    assert(cond: string_length("hello") == 5),
    assert(cond: string_length("hello world") == 11)
)

@test_is_empty tests @is_empty_str () -> void = run(
    assert(cond: is_empty_str("") == true),
    assert(cond: is_empty_str("a") == false),
    assert(cond: is_empty_str("hello") == false)
)

@test_has_content tests @has_content () -> void = run(
    assert(cond: has_content("") == false),
    assert(cond: has_content("a") == true),
    assert(cond: has_content("hello") == true)
)
