// Tests for Loops/For

use loops_for { count_to_five, sum_to_n, squares, repeat_n, double_all }

@test_count tests @count_to_five () -> void = run(
    assert_eq(count_to_five(), [1, 2, 3, 4, 5])
)

@test_sum tests @sum_to_n () -> void = run(
    assert_eq(sum_to_n(1), 1),
    assert_eq(sum_to_n(5), 15),
    assert_eq(sum_to_n(10), 55)
)

@test_squares tests @squares () -> void = run(
    assert_eq(squares(3), [1, 4, 9]),
    assert_eq(squares(5), [1, 4, 9, 16, 25])
)

@test_repeat tests @repeat_n () -> void = run(
    assert_eq(repeat_n(3, 7), [7, 7, 7]),
    assert_eq(repeat_n(0, 5), [])
)

@test_double tests @double_all () -> void = run(
    assert_eq(double_all([1, 2, 3]), [2, 4, 6]),
    assert_eq(double_all([]), [])
)
