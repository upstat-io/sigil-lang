// Tests for Loops/While

use loops_while { countdown, next_power_of_2, find_power, collatz, sum_digits, gcd }

@test_countdown tests @countdown () -> void = run(
    assert_eq(countdown(5), [5, 4, 3, 2, 1]),
    assert_eq(countdown(0), []),
    assert_eq(countdown(1), [1])
)

@test_power_of_2 tests @next_power_of_2 () -> void = run(
    assert_eq(next_power_of_2(10), 16),
    assert_eq(next_power_of_2(16), 32),
    assert_eq(next_power_of_2(1), 2),
    assert_eq(next_power_of_2(0), 1)
)

@test_collatz tests @collatz () -> void = run(
    assert_eq(collatz(1), [1]),
    assert_eq(collatz(6), [6, 3, 10, 5, 16, 8, 4, 2, 1])
)

@test_sum_digits tests @sum_digits () -> void = run(
    assert_eq(sum_digits(12345), 15),
    assert_eq(sum_digits(0), 0),
    assert_eq(sum_digits(999), 27)
)

@test_gcd tests @gcd () -> void = run(
    assert_eq(gcd(48, 18), 6),
    assert_eq(gcd(100, 25), 25),
    assert_eq(gcd(17, 13), 1)
)
