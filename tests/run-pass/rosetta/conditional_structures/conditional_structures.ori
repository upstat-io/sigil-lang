// Rosetta Code: Conditional structures
// Task: Demonstrate conditional expressions
// Ori uses if/then/else for conditionals

// Simple if/then/else
@abs (n: int) -> int = if n < 0 then -n else n;

// Chained if/else if/else
@sign (n: int) -> str =
    if n > 0 then "positive"
    else if n < 0 then "negative"
    else "zero";

// Grade classification using if/else chain
@grade (score: int) -> str =
    if score >= 90 then "A"
    else if score >= 80 then "B"
    else if score >= 70 then "C"
    else if score >= 60 then "D"
    else "F";

// Classify number using if/else chain
@classify_number (n: int) -> str =
    if n == 0 then "zero"
    else if n > 0 && n % 2 == 0 then "positive even"
    else if n > 0 then "positive odd"
    else if n % 2 == 0 then "negative even"
    else "negative odd";

// Nested conditionals
@max3 (a: int, b: int, c: int) -> int =
    if a >= b then
        if a >= c then a else c
    else
        if b >= c then b else c;

// Boolean expressions as conditions
@can_vote (age: int, is_citizen: bool) -> bool =
    if age >= 18 && is_citizen then true else false;

// Temperature classification
@temperature_feel (temp: int) -> str =
    if temp < 0 then "freezing"
    else if temp < 10 then "cold"
    else if temp < 20 then "cool"
    else if temp < 30 then "warm"
    else "hot";

@main () -> void = {
    print(msg: "abs(-5) = " + str(abs(n: -5)));
    print(msg: "sign(-3) = " + sign(n: -3));
    print(msg: "grade(85) = " + grade(score: 85));
    print(msg: "classify(4) = " + classify_number(n: 4));
    print(msg: "classify(-3) = " + classify_number(n: -3));
    print(msg: "max3(3, 7, 5) = " + str(max3(a: 3, b: 7, c: 5)));
    print(msg: "can_vote(21, true) = " + str(can_vote(age: 21, is_citizen: true)));
    print(msg: "temperature_feel(15) = " + temperature_feel(temp: 15))
}
