// Tests for Conditional structures

use "../conditional_structures" {
    abs,
    sign,
    grade,
    classify_number,
    max3,
    can_vote,
    temperature_feel,
}

@test_abs tests @abs () -> void = run(
    assert_eq(actual: abs(-5), expected: 5),
    assert_eq(actual: abs(5), expected: 5),
    assert_eq(actual: abs(0), expected: 0)
)

@test_sign tests @sign () -> void = run(
    assert_eq(actual: sign(5), expected: "positive"),
    assert_eq(actual: sign(-5), expected: "negative"),
    assert_eq(actual: sign(0), expected: "zero")
)

@test_grade tests @grade () -> void = run(
    assert_eq(actual: grade(95), expected: "A"),
    assert_eq(actual: grade(85), expected: "B"),
    assert_eq(actual: grade(75), expected: "C"),
    assert_eq(actual: grade(65), expected: "D"),
    assert_eq(actual: grade(55), expected: "F")
)

@test_classify tests @classify_number () -> void = run(
    assert_eq(actual: classify_number(0), expected: "zero"),
    assert_eq(actual: classify_number(4), expected: "positive even"),
    assert_eq(actual: classify_number(3), expected: "positive odd"),
    assert_eq(actual: classify_number(-4), expected: "negative even"),
    assert_eq(actual: classify_number(-3), expected: "negative odd")
)

@test_max3 tests @max3 () -> void = run(
    assert_eq(actual: max3(a: 1, b: 2, c: 3), expected: 3),
    assert_eq(actual: max3(a: 3, b: 2, c: 1), expected: 3),
    assert_eq(actual: max3(a: 2, b: 3, c: 1), expected: 3),
    assert_eq(actual: max3(a: 5, b: 5, c: 5), expected: 5)
)

@test_vote tests @can_vote () -> void = run(
    assert_eq(actual: can_vote(age: 21, is_citizen: true), expected: true),
    assert_eq(actual: can_vote(age: 21, is_citizen: false), expected: false),
    assert_eq(actual: can_vote(age: 16, is_citizen: true), expected: false)
)

@test_temp tests @temperature_feel () -> void = run(
    assert_eq(actual: temperature_feel(-5), expected: "freezing"),
    assert_eq(actual: temperature_feel(5), expected: "cold"),
    assert_eq(actual: temperature_feel(15), expected: "cool"),
    assert_eq(actual: temperature_feel(25), expected: "warm"),
    assert_eq(actual: temperature_feel(35), expected: "hot")
)
