// Spec: expressions/conditionals - test if/then/else
// Reference: docs/sigil_lang/0.1-alpha/spec/09-expressions.md

@test_if_then_else () -> void = run(
    assert_eq(if true then 1 else 2, 1),
    assert_eq(if false then 1 else 2, 2)
)

@test_if_comparison () -> void = run(
    let x = 10,
    assert_eq(if x > 5 then "big" else "small", "big"),
    assert_eq(if x < 5 then "small" else "big", "big")
)

@test_nested_if () -> void = run(
    let x = 5,
    let result = if x < 0 then "negative"
        else if x == 0 then "zero"
        else "positive",
    assert_eq(result, "positive")
)

@test_if_with_expressions () -> void = run(
    let a = 3,
    let b = 4,
    let max = if a > b then a else b,
    assert_eq(max, 4)
)
