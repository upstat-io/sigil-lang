#[skip("for over range not yet supported")]
@test_for_range tests @test_for_yield () -> void = run(
    let result = for i in 0..5 yield i,
    assert(result == [0, 1, 2, 3, 4]),
)

#[skip("for over range not yet supported")]
@test_for_range_inclusive tests @test_for_yield () -> void = run(
    let result = for i in 1..=3 yield i * i,
    assert(result == [1, 4, 9]),
)

// =============================================================================
// Loop Expression (Spec: loop_expr = "loop" "(" expression ")")
// =============================================================================

#[skip("loop/break evaluation not yet supported")]
@test_loop_break tests @test_for_do () -> void = run(
    let mut i = 0,
    let mut sum = 0,
    loop(
        if i >= 5 then break
        else run(
            sum = sum + i,
            i = i + 1,
        )
    ),
    assert(sum == 10),
)

// =============================================================================
// Nested Loops
// =============================================================================

#[skip("nested loop evaluation not yet supported")]
@test_nested_for tests @test_for_do () -> void = run(
    let mut sum = 0,
    for i in [1, 2, 3] do
        for j in [10, 20] do
            sum = sum + i * j,
    assert(sum == 180),
)
