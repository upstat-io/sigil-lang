// Spec: expressions/arithmetic - test arithmetic operations
// Reference: docs/sigil_lang/0.1-alpha/spec/09-expressions.md

@test_addition () -> void = run(
    assert_eq(1 + 2, 3),
    assert_eq(-1 + 1, 0)
)

@test_subtraction () -> void = run(
    assert_eq(5 - 3, 2),
    assert_eq(3 - 5, -2)
)

@test_multiplication () -> void = run(
    assert_eq(3 * 4, 12),
    assert_eq(-2 * 3, -6)
)

@test_division () -> void = run(
    assert_eq(10 / 2, 5),
    assert_eq(7 / 2, 3)
)

@test_modulo () -> void = run(
    assert_eq(7 % 3, 1),
    assert_eq(10 % 5, 0)
)

@test_precedence () -> void = run(
    assert_eq(1 + 2 * 3, 7),
    assert_eq((1 + 2) * 3, 9),
    assert_eq(10 - 4 / 2, 8)
)

@test_unary_minus () -> void = run(
    assert_eq(-5, -5),
    assert_eq(--5, 5),
    assert_eq(-(-3), 3)
)
