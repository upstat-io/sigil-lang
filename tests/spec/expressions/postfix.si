// Spec: spec/09-expressions.md § Postfix Expressions
// Design: design/02-syntax/02-expressions.md § Postfix
//
// Tests postfix expressions (indexing, field access, method calls)

// Helper function for tests
@identity (x: int) -> int = x

// =============================================================================
// Index Access
// Spec: spec/09-expressions.md § postfix = expression "[" expression "]"
// =============================================================================

@test_index_list tests @identity () -> void = run(
    let arr = [10, 20, 30, 40],
    assert(arr[0] == 10),
    assert(arr[1] == 20),
    assert(arr[3] == 40),
)

@test_index_from_end tests @identity () -> void = run(
    let arr = [1, 2, 3, 4, 5],
    assert(arr[# - 1] == 5),
    assert(arr[# - 2] == 4),
)

@test_index_map tests @identity () -> void = run(
    let m = {"a": 1, "b": 2, "c": 3},
    assert(m["a"] == 1),
    assert(m["b"] == 2),
)

@test_index_nested tests @identity () -> void = run(
    let matrix = [[1, 2], [3, 4], [5, 6]],
    assert(matrix[0][0] == 1),
    assert(matrix[1][1] == 4),
    assert(matrix[2][0] == 5),
)

// =============================================================================
// Field Access
// Spec: spec/09-expressions.md § postfix = expression "." identifier
