#[skip("type definitions not yet supported")]
@test_field_access tests @identity () -> void = run(
    let p = Point { x: 3, y: 4 },
    assert(p.x == 3),
    assert(p.y == 4),
)

// =============================================================================
// Method Call
// Spec: spec/09-expressions.md § postfix = expression "." identifier "(" args ")"
// =============================================================================

@test_method_call tests @identity () -> void = run(
    let s = "hello",
    assert(len(s) == 5),
)

// =============================================================================
// Chained Access
// =============================================================================

#[skip("type definitions not yet supported")]
@test_chained_field tests @identity () -> void = run(
    let r = Rect {
        origin: Point { x: 0, y: 0 },
        size: Point { x: 10, y: 20 },
    },
    assert(r.origin.x == 0),
    assert(r.size.y == 20),
)

