// Spec: patterns/run - test run pattern
// Reference: docs/sigil_lang/0.1-alpha/spec/10-patterns.md

@test_run_sequence () -> void = run(
    let a = 1,
    let b = 2,
    let c = a + b,
    assert_eq(c, 3)
)

@test_run_with_expressions () -> void = run(
    let x = 10,
    let y = x * 2,
    let z = y + 5,
    assert_eq(z, 25)
)

@add (a: int, b: int) -> int = a + b

@test_run_add tests @add () -> void = run(
    let result = @add(2, 3),
    assert_eq(result, 5)
)
