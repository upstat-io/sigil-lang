// Spec: patterns/match - test match pattern
// Reference: docs/sigil_lang/0.1-alpha/spec/10-patterns.md

@test_match_literal () -> void = run(
    let x = 2,
    let result = match(x,
        1 -> "one",
        2 -> "two",
        3 -> "three",
        _ -> "other"
    ),
    assert_eq(result, "two")
)

@test_match_wildcard () -> void = run(
    let x = 99,
    let result = match(x,
        1 -> "one",
        _ -> "other"
    ),
    assert_eq(result, "other")
)

@test_match_with_expressions () -> void = run(
    let x = 5,
    let result = match(x > 3,
        true -> "big",
        false -> "small"
    ),
    assert_eq(result, "big")
)
