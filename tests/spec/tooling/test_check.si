// Spec: spec/13-testing.md § Coverage Enforcement
// Design: design/11-testing/index.md § Overview
//
// Tests for the `sigil check` command.
// This file validates that coverage checking works correctly.
// All functions here have tests, so `sigil check` should pass.

// =============================================================================
// Helper functions that must have tests
// =============================================================================

@double (x: int) -> int = x * 2

@triple (x: int) -> int = x * 3

@negate (x: int) -> int = -x

// =============================================================================
// Test: double function
// Spec: spec/13-testing.md § Coverage Enforcement
// =============================================================================
@test_double tests @double () -> void = run(
    assert_eq(double(0), 0),
    assert_eq(double(5), 10),
    assert_eq(double(-3), -6),
)

// =============================================================================
// Test: triple function
// Spec: spec/13-testing.md § Coverage Enforcement
// =============================================================================
@test_triple tests @triple () -> void = run(
    assert_eq(triple(0), 0),
    assert_eq(triple(4), 12),
    assert_eq(triple(-2), -6),
)

// =============================================================================
// Test: negate function
// Spec: spec/13-testing.md § Coverage Enforcement
// =============================================================================
@test_negate tests @negate () -> void = run(
    assert_eq(negate(0), 0),
    assert_eq(negate(5), -5),
    assert_eq(negate(-3), 3),
)
