// Spec: 07-properties-of-types.md ยง Debug Trait
// Tests for Debug trait on tuple types

use std.testing { assert_eq }

// =============================================================================
// Tuple Debug
// =============================================================================

@test_tuple_debug_pair tests @tuple_debug_pair () -> void = {
    assert_eq(actual: (1, true).debug(), expected: "(1, true)")
}

@tuple_debug_pair () -> str = (1, true).debug();

@test_tuple_debug_triple tests @tuple_debug_triple () -> void = {
    assert_eq(actual: (1, "hi", false).debug(), expected: "(1, \"hi\", false)")
}

@tuple_debug_triple () -> str = (1, "hi", false).debug();
