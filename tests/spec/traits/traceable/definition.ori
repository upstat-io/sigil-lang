// Spec: 07-properties-of-types.md ยง Traceable
// Trait is defined, methods accessible

use std.testing { assert_eq, assert }

// Error type works with Err()
@test_err tests @err () -> void = {
    let r = Err(Error("hello"));
    assert(cond: r.is_err())
}

@err () -> bool = {
    let r = Err(Error("hello"));
    r.is_err()
}

// has_trace callable on Result<T, Error>
@test_has tests @has () -> void = {
    let r = Err(Error("test"));
    assert_eq(
        actual: r.has_trace(),
        expected: false,
    )
}

@has () -> bool = {
    let r = Err(Error("test"));
    r.has_trace()
}

// trace() callable on Result<T, Error>
@test_trace tests @trace () -> void = {
    let r = Err(Error("test"));
    assert_eq(
        actual: r.trace(),
        expected: "",
    )
}

@trace () -> str = {
    let r = Err(Error("test"));
    r.trace()
}

// trace_entries() callable
@test_entries tests @entries () -> void = {
    let r = Err(Error("test"));
    assert_eq(
        actual: r.trace_entries().len(),
        expected: 0,
    )
}

@entries () -> int = {
    let r = Err(Error("test"));
    r.trace_entries().len()
}

// All methods work on Ok variant
@test_ok tests @ok () -> void = {
    let r: Result<int, Error> = Ok(42);
    assert_eq(
        actual: r.has_trace(),
        expected: false,
    );
    assert_eq(
        actual: r.trace(),
        expected: "",
    );
    assert_eq(
        actual: r.trace_entries().len(),
        expected: 0,
    )
}

@ok () -> bool = {
    let r: Result<int, Error> = Ok(42);
    r.has_trace() == false
}
