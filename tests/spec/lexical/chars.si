// Tests character literal parsing

// Helper function for tests
@identity (x: int) -> int = x

// =============================================================================
// Basic Character Literals
// Spec: spec/03-lexical-elements.md Â§ char_literal = "'" char_content "'"
// =============================================================================

@test_char_basic tests @identity () -> void = run(
    assert('a' == 'a'),
    assert('Z' == 'Z'),
    assert('0' == '0'),
    assert(' ' == ' '),
)

// =============================================================================
// Escape Sequences
// Spec: spec/03-lexical-elements.md Â§ escape = '\' ( '\' | "'" | 'n' | 't' | 'r' | '0' )
// =============================================================================

@test_char_escapes tests @identity () -> void = run(
    assert('\\' == '\\'),
    assert('\'' == '\''),
    assert('\n' == '\n'),
    assert('\t' == '\t'),
    assert('\r' == '\r'),
    assert('\0' == '\0'),
)

