// =============================================================================
// SI Units Verification (Not Binary)
// =============================================================================

// These tests verify that Ori uses SI units (1000-based), NOT binary (1024-based)
@size_si_not_binary_kb () -> bool = run(
    let si_kb = 1kb.bytes(),
    let binary_kib = 1024,
    si_kb == 1000 && si_kb != binary_kib,
)

@test_size_si_not_binary_kb tests @size_si_not_binary_kb () -> void = run(
    assert(cond: size_si_not_binary_kb()),
)

@size_si_not_binary_mb () -> bool = run(
    let si_mb = 1mb.bytes(),
    let binary_mib = 1024 * 1024,
    si_mb == 1000000 && si_mb != binary_mib,
)

@test_size_si_not_binary_mb tests @size_si_not_binary_mb () -> void = run(
    assert(cond: size_si_not_binary_mb()),
)

@size_si_not_binary_gb () -> bool = run(
    let si_gb = 1gb.bytes(),
    let binary_gib = 1024 * 1024 * 1024,
    si_gb == 1000000000 && si_gb != binary_gib,
)

@test_size_si_not_binary_gb tests @size_si_not_binary_gb () -> void = run(
    assert(cond: size_si_not_binary_gb()),
)

