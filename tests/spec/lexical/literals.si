// Spec: lexical/literals - test literal parsing
// Reference: docs/sigil_lang/0.1-alpha/spec/03-lexical-elements.md

// Integer literals
@test_integers () -> void = run(
    assert_eq(42, 42),
    assert_eq(1_000_000, 1000000)
)

// Float literals
@test_floats () -> void = run(
    assert_eq(3.14, 3.14)
)

// Boolean literals
@test_booleans () -> void = run(
    assert_eq(true, true),
    assert_eq(false, false),
    assert(true),
    assert(!false)
)

// String literals
@test_strings () -> void = run(
    assert_eq("hello", "hello")
)

// Duration literals
@test_durations () -> void = run(
    let ms = 100ms,
    let s = 30s,
    let m = 5m,
    let h = 2h,
    assert_eq(ms, 100ms),
    assert_eq(s, 30s),
    assert_eq(m, 5m),
    assert_eq(h, 2h)
)

// Size literals
@test_sizes () -> void = run(
    let b = 1024b,
    let kb = 4kb,
    let mb = 10mb,
    let gb = 2gb,
    assert_eq(b, 1024b),
    assert_eq(kb, 4kb),
    assert_eq(mb, 10mb),
    assert_eq(gb, 2gb)
)

// List literals
@test_lists () -> void = run(
    let empty: [int] = [],
    let nums = [1, 2, 3],
    assert_eq(len(empty), 0),
    assert_eq(len(nums), 3)
)
